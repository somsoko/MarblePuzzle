<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center"
              android:padding="25dp">

    <!-- 테두리 있는 박스 -->
    <LinearLayout
            android:layout_width="@dimen/stage_box_width"
            android:layout_height="@dimen/stage_box_width"
            android:orientation="vertical"
            android:background="@drawable/stage_box"
            android:gravity="center"
            android:padding="5dp">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

            <ImageView
                    android:id="@+id/star2"
                    android:layout_width="@dimen/star_width"
                    android:layout_height="@dimen/star_width"
                    android:src="@drawable/star"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="@dimen/star_width"
                    android:layout_height="@dimen/star_width"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/star"/>

                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="@dimen/star_width"
                    android:layout_height="@dimen/star_width"
                    android:src="@drawable/star"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 스테이지 번호 -->
    <TextView
            android:id="@+id/stageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 - 1"
            android:textSize="20sp"
            android:fontFamily="@font/jua"
            android:textColor="@color/black"/>
</LinearLayout>