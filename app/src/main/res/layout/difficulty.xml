<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ic_launcher_background"
        android:padding="10dp">

    <ImageButton
            android:id="@+id/difficultyButtonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_arrow_back_24"
            android:background="@android:color/transparent"/>


    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="20dp">

            <!-- 튜토리얼 난이도 카드 -->
            <LinearLayout
                    android:id="@+id/tutorialCard"
                    android:layout_width="@dimen/card_width"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"

                    android:background="@drawable/rounded_card_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:alpha="1.0">

                <TextView
                        android:id="@+id/tutorialProgressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/difficulty_progress_text"
                        android:layout_marginBottom="10dp"

                        android:text="3 / 10"
                        android:visibility="visible"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tutorial"
                        style="@style/difficulty_text"
                        android:layout_marginBottom="20dp"/>

                <ProgressBar
                        android:id="@+id/tutorialProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:progressDrawable="@drawable/progress_bar"
                        android:backgroundTint="#EEEEEE"

                        android:progress="3"
                        android:max="10"
                        android:visibility="visible"/>

            </LinearLayout>

            <!-- 이지 난이도 카드 -->
            <LinearLayout
                    android:id="@+id/easyCard"
                    android:layout_width="@dimen/card_width"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"

                    android:background="@drawable/rounded_card_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:alpha="1.0">

                <TextView
                        android:id="@+id/easyProgressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/difficulty_progress_text"
                        android:layout_marginBottom="10dp"

                        android:text="3 / 10"
                        android:visibility="visible"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/easy"
                        style="@style/difficulty_text"
                        android:layout_marginBottom="20dp"/>

                <ProgressBar
                        android:id="@+id/easyProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:progressDrawable="@drawable/progress_bar"
                        android:backgroundTint="#EEEEEE"

                        android:progress="3"
                        android:max="10"
                        android:visibility="visible"/>
            </LinearLayout>

            <!-- 보통 난이도 카드 -->
            <LinearLayout
                    android:id="@+id/normalCard"
                    android:layout_width="@dimen/card_width"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"

                    android:background="@drawable/locked_card_background"
                    android:clickable="false"
                    android:focusable="false"
                    android:alpha="0.5">

                <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/baseline_lock_24"
                        android:layout_marginBottom="10dp"

                        android:visibility="visible"/>

                <TextView
                        android:id="@+id/normalProgressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/difficulty_progress_text"
                        android:layout_marginBottom="10dp"

                        android:text="0 / 10"
                        android:visibility="gone"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/normal"
                        style="@style/difficulty_text"
                        android:layout_marginBottom="20dp"/>

                <ProgressBar
                        android:id="@+id/normalProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:progressDrawable="@drawable/progress_bar"
                        android:backgroundTint="#EEEEEE"

                        android:progress="0"
                        android:max="10"
                        android:visibility="gone"/>
            </LinearLayout>

            <!-- 어려움 난이도 카드 -->
            <LinearLayout
                    android:id="@+id/hardCard"
                    android:layout_width="@dimen/card_width"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"

                    android:background="@drawable/locked_card_background"
                    android:clickable="false"
                    android:focusable="false"
                    android:alpha="0.5">

                <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/baseline_lock_24"
                        android:layout_marginBottom="10dp"

                        android:visibility="visible"/>

                <TextView
                        android:id="@+id/hardProgressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/difficulty_progress_text"
                        android:layout_marginBottom="10dp"

                        android:text="0 / 10"
                        android:visibility="gone"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hard"
                        style="@style/difficulty_text"
                        android:layout_marginBottom="20dp"/>

                <ProgressBar
                        android:id="@+id/hardProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:progressDrawable="@drawable/progress_bar"
                        android:backgroundTint="#EEEEEE"

                        android:progress="0"
                        android:max="10"
                        android:visibility="gone"/>
            </LinearLayout>



            <LinearLayout
                    android:layout_width="@dimen/card_width"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:background="@drawable/locked_card_background"
                    android:clickable="false"
                    android:focusable="false"
                    android:alpha="0.5">

                <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/baseline_lock_24"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/soon"
                        style="@style/difficulty_text"
                        android:layout_marginBottom="20dp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="@dimen/card_width"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:background="@drawable/locked_card_background"
                    android:clickable="false"
                    android:focusable="false"
                    android:alpha="0.5">

                <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/baseline_lock_24"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/soon"
                        style="@style/difficulty_text"
                        android:layout_marginBottom="20dp"/>
            </LinearLayout>
        </LinearLayout>

    </HorizontalScrollView>
</LinearLayout>